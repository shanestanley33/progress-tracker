<%- include('../partials/header.ejs') %>
    <h1>List of Trackers </h1>
    <table class="table" id="tracker-index">
        <thead>
            <th scope="row">Pushups</th>
            <th scope="col">Pullups</th>
            <th scope="col">Situps</th>
            <th>Jumping Jacks</th>
        </thead>
        <tbody>
           <% indexTrackers.forEach(function(indexTrackers) { %>
            <tr>
                <td><%= indexTrackers.pushups %></td>
                <td><%= indexTrackers.pullups %></td>
                <td><%= indexTrackers.situps %></td>
                <td><%= indexTrackers.jumpingJacks %></td>
                <form action = "/fitnessTrackers/<%= indexTrackers._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete tracker</button>
                </form>
            </tr>
            <% }); %>
        </tbody>
    </table>
    <div id="add-fitnessTracker">
        <a href="/fitnessTrackers/new">Add a tracker</a>
    </div>
<%- include('../partials/footer.ejs') %>